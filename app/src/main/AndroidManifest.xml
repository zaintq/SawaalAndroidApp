<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pk.edu.itu.csalt.pquiz">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature android:glEsVersion="0x00020000" android:required="true" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/PQTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
        </activity>
        <activity android:name=".ProfileActivity" />
        <activity android:name=".QuestionsActivity" />
        <activity android:name=".RecordActivity" />
        <activity android:name=".RecordNewQuestion" />
        <activity android:name=".FriendsQuestions" />
        <activity android:name=".NewQuestions" />
        <activity android:name=".RevisitQuestions" />
        <activity android:name=".PlayRevisitQuestion" />
        <activity android:name=".PlayQuestion" />
        <activity android:name=".ForwardQuestion" />
        <activity android:name=".ListenComments" />
        <activity
            android:name=".TabbedRankings"
            android:label="@string/title_activity_tabbed_rankings"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".Splash"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>